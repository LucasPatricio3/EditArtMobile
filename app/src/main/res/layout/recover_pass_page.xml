<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    tools:context=".RecoveryPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="48dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/editartlogo" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="@string/criar_conta"
            android:text="RECUPERAR PASSWORD"
            android:textAlignment="center"
            android:textColor="@color/beige"
            android:textColorHint="@color/beige"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/token_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/square_border"
            android:hint="Token de SeguranÃ§a"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/dark_beige"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recover_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/dark_grey"
            android:padding="12dp"
            android:text="RECUPERAR"
            android:textColor="@color/beige"
            android:textSize="20sp"
            app:cornerRadius="0dp"
            app:strokeColor="@color/beige"
            app:strokeWidth="1dp" />

    </LinearLayout>

</RelativeLayout>